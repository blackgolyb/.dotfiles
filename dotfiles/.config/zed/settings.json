// Zed settings
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
    "context_servers": {
        "shadcn-mcp-server": {
            "enabled": false,
            "settings": {}
        },
        "mcp-server-github": {
            "enabled": false,
            "settings": {}
        },
        "mcp-server-context7": {
            "enabled": false,
            "settings": {}
        }
    },
    "tab_bar": {
        "show": false,
        "show_nav_history_buttons": false
    },
    "toolbar": {
        "breadcrumbs": true,
        "quick_actions": false,
        "selections_menu": false
    },
    "terminal": {
        "button": false,
        // "font_size": 20,
        "font_size": 10,
        "font_family": "JetBrainsMono Nerd Font",
        "line_height": {
            "custom": 1.3
        }
    },
    "agent": {
        "default_model": {
            "provider": "copilot_chat",
            "model": "claude-sonnet-4.5"
        },
        "model_parameters": []
    },
    "edit_predictions": {
        "mode": "eager" // or "subtle"
    },
    "collaboration_panel": {
        "button": false
    },
    "outline_panel": {
        "button": false
    },
    "project_panel": {
        "auto_fold_dirs": false,
        "sticky_scroll": false,
        "button": false,
        "dock": "right"
    },
    "notification_panel": {
        "button": false
    },
    "gutter": {
        // штука там де номера ліній
        "folds": false,
        "runnables": false,
        "breakpoints": false
    },
    "centered_layout": {
        "left_padding": 0.1,
        "right_padding": 0.1
    },
    "show_edit_predictions": true,
    "features": {
        "edit_prediction_provider": "copilot"
    },
    "vim_mode": true,
    "vim": {
        "use_smartcase_find": false
    },
    "command_aliases": {
        "W": "w",
        "Wq": "wq",
        "Q": "q",
        "we": "save without format",
        "We": "save without format"
    },
    "relative_line_numbers": true,
    "tab_size": 4,
    "inlay_hints": {
        "enabled": false,
        "show_background": true
    },
    "title_bar": {
        // "show": false
    },
    "status_bar": {
        // "show": false
    },
    "preferred_line_length": 80,
    "vertical_scroll_margin": 10,
    // "ui_font_size": 16,
    // "buffer_font_size": 18,
    "ui_font_size": 10,
    "buffer_font_size": 12,
    "buffer_font_family": "FiraCode Nerd Font Mono",
    "theme": {
        "mode": "system",
        "light": "Mono Dark",
        "dark": "One Dark Pro"
    },
    "experimental.theme_overrides": {
        // "background.appearance": "blurred",
        // "background": "#23272efc", // main bg color and opacity
        // "surface.background": "#0000",
        // "element.background": "#0000",
        // "title_bar.background": "#1e2227f6",
        // "status_bar.background": "#1e2227f6",
        // "tab_bar.background": "#1e2227",
        // "tab.inactive_background": "#0000",
        // "tab.active_background": "#282c33ff",
        // "panel.background": "#0000",
        // "editor.background": "#0000",
        // "terminal.background": "#0000",
        // "editor.gutter.background": "#0000",
        // // "scrollbar.track.background": "#1e2227aa",
        // "scrollbar.track.background": "#0000",
        // "scrollbar.thumb.background": "#4e5666f6",
        // // Terminal colors
        // "terminal.ansi.black": "#232627",
        // "terminal.ansi.red": "#ed1515",
        // "terminal.ansi.green": "#11d116",
        // "terminal.ansi.yellow": "#f67400",
        // "terminal.ansi.blue": "#1d99f3",
        // "terminal.ansi.magenta": "#9b59b6",
        // "terminal.ansi.cyan": "#1abc9c",
        // "terminal.ansi.white": "#fcfcfc",
        // "terminal.ansi.bright_black": "#7f8c8d",
        // "terminal.ansi.bright_red": "#c0392b",
        // "terminal.ansi.bright_green": "#1cdc9a",
        // "terminal.ansi.bright_yellow": "#fdbc4b",
        // "terminal.ansi.bright_blue": "#3daee9",
        // "terminal.ansi.bright_magenta": "#8e44ad",
        // "terminal.ansi.bright_cyan": "#16a085",
        // "terminal.ansi.bright_white": "#ffffff"
    },
    "file_types": {
        "Clojure": ["yuck"]
    },
    "languages": {
        "JSON": {
            "tab_size": 2
        },
        "Python": {
            "language_servers": ["pyright", "ruff"],
            // "language_servers": ["pyright"],
            "format_on_save": "on",
            "formatter": [
                {
                    "language_server": {
                        "name": "ruff"
                    }
                },
                {
                    "code_actions": {
                        // Fix all auto-fixable lint violations
                        // "source.fixAll.ruff": true,
                        // Organize imports
                        "source.organizeImports.ruff": true
                    }
                }
            ]
        },
        "JavaScript": {
            "formatter": {
                "external": {
                    "command": "npx",
                    "arguments": [
                        "prettier",
                        "--ignore-unknown",
                        "--stdin-filepath",
                        "{buffer_path}"
                    ]
                }
            }
        },
        "TypeScript": {
            "formatter": {
                "external": {
                    "command": "npx",
                    "arguments": [
                        "prettier",
                        "--ignore-unknown",
                        "--stdin-filepath",
                        "{buffer_path}"
                    ]
                }
            }
        },
        "Markdown": {
            "format_on_save": "on",
            "remove_trailing_whitespace_on_save": false
        }
    },
    "lsp": {
        "typos": {
            "initialization_options": {
                // Diagnostic severity within Zed. "Error" by default, can be:
                // "Error", "Hint", "Information", "Warning"
                "diagnosticSeverity": "Warning"
            }
        },
        "ruff": {
            "initialization_options": {
                "settings": {
                    // Ruff server settings goes here
                    "lineLength": 100,
                    "lint": {
                        "extendSelect": ["I"]
                    }
                }
            }
        },
        "pyright": {
            "settings": {
                "python.analysis": {
                    "typeCheckingMode": "off"
                },
                "python": {
                    "pythonPath": ".venv/bin/python"
                }
            }
        },
        "tailwindcss-language-server": {
            "settings": {
                "classAttributes": ["class", "className", "ngClass", "styles"]
            }
        },
        "texlab": {
            "settings": {
                "texlab": {
                    "build": {
                        "onSave": false
                    }
                }
            }
        }
    }
}
